<% flash.each do |type, message| %>
    <turbo-frame id="flash">
        <div class="alert alert-<%= type %> alert-dismissible fade show m-3" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </turbo-frame>
<% end %>
